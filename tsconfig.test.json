{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"composite": false,
		"rootDir": "${configDir}/src",
		"tsBuildInfoFile": "${configDir}/node_modules/.cache/tsbuildinfo/tsconfig.test.tsbuildinfo"
	},
	"include": [
		"${configDir}/src/**/*.test.ts",
		"${configDir}/src/**/*.spec.ts",
		"${configDir}/src/**/*.test-d.ts"
	],
	"references": [
		{
			"path": "./tsconfig.app.json"
		}
	]
}